<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link rel="stylesheet" href="/public/styles/main.css" />
    <script src="/public/scripts/app.js" defer></script>
    <title>Hoptimists | Breweries</title>
  </head>

  <!-- Nav Bar -->
  <%- include('../partials/navbar.ejs') -%>
  <!-- Hero -->
  <header class="is-family-monospace">
    <section class="hero is-dark">
      <div class="hero-body">
        <div class="container">
          <nav>
            <h2 class="title is-2">Welcome to Hoptimist (landing page)</h2>
          </nav>
        </div>
      </div>
    </section>
  </header>
  <!-- Body -->
  <body>
    <nav>
      <h1>Welcome to The Hoptimists - landing page</h1>
      <ul>
        <li>
          <a href="/breweries/new"> Add a brewery</a>
        </li>
        <li>
          <a href="/beers">Display the beers</a>
        </li>
      </ul>
    </nav>
    <main>
      <h2>List of Breweries</h2>
      <ul>
        <% breweries.forEach(brewery => { %>
        <li>
          <a href="/breweries/<%= brewery._id %>"> <%= brewery.name %> </a>
        </li>
        <% }) %>
      </ul>
      <% if(breweries.length === 0) { %>
      <p>
        There are no breweries yet! Be the first to share what brewery you are
        at!!
      </p>
      <% } %>
    </main>
  </body>
  <!-- Footer -->
  <%- include('../partials/footer.ejs') -%>
</html>
