<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head-links.ejs') -%>
    <title>Edit Beer</title>
  </head>

  <!-- Nav Bar -->
  <%- include('../partials/navbar.ejs') -%>
  <!-- Hero -->
  <header class="is-family-monospace">
    <section class="hero is-dark">
      <div class="hero-body">
        <div class="container">
          <nav>
            <h1 class="title is-1"><%=beer.name%></h1>
            <h2 class="title is-4"><%=beer.style%></h2>
          </nav>
        </div>
      </div>
    </section>
  </header>
  <!-- Body -->
  <body>
    <main>
      <br />
      <!-- Form -->
      <h2>Update this beer:</h2>
      <div class="control">
        <form action="/beers/<%= beer._id%>?_method=PUT" method="POST">
          <input
            class="input"
            type="text"
            name="name"
            placeholder="Beer Name"
          />
          <br />
          <input
            class="input"
            type="text"
            name="style"
            placeholder="Beer Style"
          />
          <br />
          <input
            class="input"
            type="text"
            name="notes"
            placeholder="Tasting Notes"
          />
          <br />
          <input
            class="input"
            type="number"
            name="rating"
            placeholder="Rating (1-10)"
          />
          <br />
          <br />
          <button class="button is-link">Submit</button>
        </form>
      </div>
    </main>
  </body>

  <!-- Footer -->
  <%- include('../partials/footer.ejs') -%>
</html>
