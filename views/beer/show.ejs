<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head-links.ejs') -%>
    <title>Show beer</title>
  </head>

  <!-- Nav Bar -->
  <%- include('../partials/navbar.ejs') -%>
  <!-- Hero -->
  <header class="is-family-monospace">
    <section class="hero is-dark">
      <div class="hero-body">
        <div class="container">
          <nav>
            <h1 class="title is-1"><%=beer.name%></h1>
            <h2 class="title is-4"><%= beer.style%></h2>
          </nav>
        </div>
      </div>
    </section>
  </header>
  <!-- Body -->
  <body>
    <main>
      <section>
        <h2>Beer Deets</h2>
        <a href="/beers/<%= beer._id %>/edit">Edit</a>
        <ul>
          <li>Beer Name: <%=beer.name %></li>
          <li>Beer Style: <%=beer.style %></li>
          <li>Tasting Notes: <%=beer.notes %></li>
          <li>Rating (1-10): <%=beer.rating %></li>
        </ul>
      </section>
      <form action="/beers/<%= beer._id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete" />
      </form>
    </main>
  </body>
  <!-- Footer -->
  <%- include('../partials/footer.ejs') -%>
</html>
